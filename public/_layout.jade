doctype
html
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		title #{title} #{version}
		if environment == "production"
			link(rel="stylesheet" href="/dash/main.css")
		else
			link(rel="stylesheet" href="/main.css")
	body
		.container-fluid
			.row
				.col-xs-12
					!= yield
		!= partial("_partials/headlines.jade")
		if environment == "production"
			script(src="/dash/js/global.js")
		else
			script(src="/js/global.js")
