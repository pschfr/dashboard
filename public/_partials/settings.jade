.panel.panel-default.closed#settings
	.panel-heading
		h3.panel-title
			i(class='fa fa-cogs' aria-hidden='true')
			|  Settings
	.panel-body.text-center
		button#lightDark.btn.btn-default.light-switch
			i(class='fa fa-sun-o fa-2x' aria-hidden='true')
			br
			span#lightDarkState Light
		button#tempUnit.btn.btn-default.temp-unit
			i(class='fa fa-thermometer-full fa-2x' aria-hidden='true')
			br
			span#tempUnitState Fahrenheit

script(src=(environment == 'production' ? '/dash/js/settings.js' : '/js/settings.js'))
